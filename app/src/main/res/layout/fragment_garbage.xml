<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.angelakinder.cbrmgarbage.GarbageFragment">

    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:text="@string/txtHouseNumber"
        android:id="@+id/txtHouseNumber" />

    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:id="@+id/txtStreetList"
        android:text="@string/txtStreetList"
        android:layout_gravity="center_horizontal|top"
        android:layout_below="@+id/txtHouseNumber"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>
